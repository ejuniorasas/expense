<p id="notice"><%= notice %></p>

<h1>Expenses</h1>
<modal :show='show' @close="show=false"></modal>
<button type="button" class="btn btn-info btn-lg" @click="show = true">Open Modal</button>

  <sum :expenses='<%=@expenses_summary.to_json%>'></sum>
  
  <div class="row">
    <table>
      <thead>
        <tr>
          <th>Name</th>
          <th>Description</th>
          <th>Value</th>
          <th>Status</th>
          <th>Date</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @expenses.each do |expense| %>
          <tr>
            <td><%= expense.name %></td>
            <td><%= expense.description %></td>
            <td><%= expense.value %></td>
            <td><%= expense.status %></td>
            <td><%= expense.date %></td>
            <td><%= link_to 'Show', expense %></td>
            <td><%= link_to 'Edit', edit_expense_path(expense) %></td>
            <td><%= link_to 'Destroy', expense, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
    
  </div>
<br>

<%= link_to 'New Expense', new_expense_path %>
